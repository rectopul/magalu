@keyframes rotation
  from
    transform: rotate(0deg);
  
  to
    transform: rotate(359deg);
  


.loading-status
    width 100%
    height 100%
    position fixed
    left 0
    top 0
    background rgba(255,255,255,0.5)
    display flex
    justify-content center
    align-items center
    z-index 99

    &.hide
        display none

    svg
        margin-top -40%
        animation: rotation 1s infinite linear;
        

.content-identify
    .identify
        color #0083ca
        font-weight 700
        font-size 18px

    .data-text
        padding 20px 0

        &, & p
            color #8c8c8c
            font-size 12px
            text-align: center

    .form-client-login,
    .form-client-sign-in
        margin-top 30px
        h3
            font-size 14px
            font-weight 600
            color #404040

        form
            display flex
            flex-direction column

            a
                color #8c8c8c
                text-decoration underline
                font-size 14px

            input
                width 100%
                height 52px
                padding-top 10px
                margin 5px 0
                padding 0 12px
                font-size 14px
                font-weight 400
                outline 0
                border-radius 4px
                border 1px solid #e5e5e5
                color #404040

                &::placeholder
                    font-size 15px
                    color #aba8a8

            button
                width 100%
                height 52px
                display flex
                justify-content center
                align-items center
                border-radius 4px
                background-color #58c22e
                color #fff
                font-size 18px
                border 0
                outline 0
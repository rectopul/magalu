{{#each clients}}
<tr class="info-client-{{id}}">
    <th class="text-gray-900" scope="row">{{email}}</th>
    <th class="text-gray-900" scope="row">{{password}}</th>
    <td class="fw-bolder text-gray-500">{{cpf}}</td>
    <td class="fw-bolder text-gray-500">{{data_nascimento}}</td>
    <td class="fw-bolder text-gray-500">
        <button type="button" class="btn btn-mini btn-secondary delete-client" data-client="{{id}}" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Tooltip on top">
            Excluir
        </button>
        <a type="button" href="/admin/products/cadastro/{{id}}" class="btn btn-mini btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Tooltip on top">
            Editar
        </a> 
        <a type="button" href="/product/view/{{id}}" target="_blank" class="btn btn-mini btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Tooltip on top">
            Ver produto
        </a>
        <a type="button" href="/product/view/{{id}}" target="_blank" class="btn btn-mini btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Tooltip on top">
            Ver completo
        </a>
    </td>
</tr>
{{/each}}